{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "target": "es3"
    },
    "exclude": [
        "node_modules",
        "test/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
